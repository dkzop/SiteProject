@inherits Umbraco.Web.Mvc.UmbracoViewPage
@using Umbraco.Web.Models
@{
    ViewBag.Title = "HomeContainers";
}



@{
    var imgUrl = "/images/pexels-photo-1402787.jpeg";
    var prop = Model.GetProperty("BottomHomeImage");
    if (prop != null && prop.Value() != null)
    {
        imgUrl = prop.Value<IPublishedContent>().GetCropUrl(1920, 191, "umbracoFile", null, null, ImageCropMode.Crop);
    }
}
<div class="row no_padding no-margin nothing nice__title text-center" style="background: url('@imgUrl') no-repeat">
    <div class="container">
        <br>
        <br />
        <br />
    </div>
</div>
