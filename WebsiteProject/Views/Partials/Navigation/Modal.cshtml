@using System.Web.Mvc.Html
@inherits Umbraco.Web.Mvc.UmbracoViewPage

@{
    ViewBag.Title = "ModalSignInUp";
}

@if (!User.Identity.IsAuthenticated)
{
    <section class="modal fade" id="modal-form" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content modal-popup">

                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>

                <div class="modal-body">
                    <div class="container-fluid">
                        <div class="row">

                            <div class="col-md-12 col-sm-12">
                                <div class="modal-title">
                                    <h2>Test</h2>
                                </div>

                                <!-- NAV TABS -->
                                <ul class="nav nav-tabs" role="tablist">
                                    <li class="active"><a href="#sign_up" aria-controls="sign_up" role="tab" data-toggle="tab">Create an account</a></li>
                                    <li><a href="#sign_in" aria-controls="sign_in" role="tab" data-toggle="tab">Sign In</a></li>
                                </ul>

                                <!-- TAB PANES -->
                                <div class="tab-content">
                                    <div role="tabpanel" class="tab-pane fade in active" id="sign_up">
                                        <form method="post" action="">
                                            @Html.Partial("~/Views/Register.cshtml", new WebsiteProject.Models.RegisterModel())
                                        </form>
                                    </div>

                                    <div role="tabpanel" class="tab-pane fade in" id="sign_in">
                                        <form action="#" method="post">
                                            @Html.Partial("~/Views/Login/Login.cshtml", new WebsiteProject.Models.LoginModel())
                                        </form>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>

            </div>
        </div>
    </section>
}
else
{
    <section class="modal fade" id="modal-form" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content modal-popup">

                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>

                <div class="modal-body">
                    <div class="container-fluid">
                        <div class="row">

                            <div class="col-md-12 col-sm-12">
                                <div class="modal-title">
                                    <h2>Teste</h2>
                                </div>

                                <!-- NAV TABS -->
                                <ul class="nav nav-tabs" role="tablist">
                                    @if (!User.Identity.IsAuthenticated)
                                    {
                                        <li class="active"><a href="#sign_in" aria-controls="sign_in" role="tab" data-toggle="tab">Account</a></li>
                                        <li><a href="#register" aria-controls="register" role="tab" data-toggle="tab">Register</a></li>
                                    }
                                    else
                                    {
                                        <li class="active"><a href="#sign_in" aria-controls="sign_in" role="tab" data-toggle="tab">Account</a></li>
                                    }
                                </ul>
                                @if (!User.Identity.IsAuthenticated)
                                {
                                    <!-- TAB PANES -->
                                    <div class="tab-content">

                                        <div role="tabpanel" class="tab-pane fade in active" id="sign_in">
                                            @Html.Action("Login", "Login")
                                        </div>
                                    </div>
                                    <div class="tab-content">

                                        <div role="tabpanel" class="tab-pane fade in active" id="register">
                                            @Html.Action("Register", "Register")
                                        </div>
                                    </div>
                                }
                                else
                                {
                                    <div class="tab-content">

                                        <div role="tabpanel" class="tab-pane fade in active" id="sign_in">
                                            @Html.Action("Logout", "Login")
                                            <button class="form-control" name="AccountSettings" type="submit">Account Settings</button>
                                        </div>
                                    </div>
                                }
                            </div>

                        </div>
                    </div>
                </div>

            </div>
        </div>
    </section>
}