@inherits Umbraco.Web.Mvc.UmbracoViewPage
@using Umbraco.Web.Models

@{
    var imgUrl = "/images/pexels-photo-1402787.jpeg";
    var prop = Model.GetProperty("BottomRightImage");
    if (prop != null && prop.Value() != null)
    {
        imgUrl = prop.Value<IPublishedContent>().GetCropUrl(300, 190, "umbracoFile", null, null, ImageCropMode.Crop);
    }
}

<div class="col-md-4">
    <h3><a href="#">Modern Design</a></h3>
    <img src="@imgUrl" alt="image" class="img-responsive img-rounded">
    <p>Lorem ipsum dolor sit amet, consectetuer adipiscing elit. Donec odio. Quisque volutpat mattis eros. </p>
    <p><a class="btn btn-info btn-md" href="#" role="button">Learn more</a>
</div>

